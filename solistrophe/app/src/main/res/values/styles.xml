<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#000000</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="generalnotitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="blackUnderline" parent="android:Widget.EditText">
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="floatButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#F8F826</item>
    </style>

</resources>
