<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esgi.al.solistrophe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/web_hi_res_512"
        android:label="Solistrophe"
        android:logo="@drawable/web_hi_res_512"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".login.Signin" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.Register" android:screenOrientation="portrait" />
        <activity android:name=".menu.Menu" android:screenOrientation="portrait" />
        <activity android:name=".Sinister.Sinister" android:screenOrientation="portrait"></activity>
        <activity android:name=".Sinister.DeclaredSinister" android:screenOrientation="portrait"></activity>
    </application>

</manifest>